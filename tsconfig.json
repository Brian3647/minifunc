{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": false,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"bun-types" // add Bun global
		],
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
